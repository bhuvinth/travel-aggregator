{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2018", "esnext.asynciterable", "ES2019.Array"],
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@main/*": ["./*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@utils/*": ["core/utils/*"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "include": ["./src/**/*", "typeDeclarations/wideAlign.d.ts"]
}
